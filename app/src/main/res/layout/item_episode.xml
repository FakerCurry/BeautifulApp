<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:id="@+id/itemclickLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/episode_item_iv"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="5dp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_margin="5dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/episode_item_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="11111111111111111111111"
                android:textSize="18sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/episode_item_type_iv"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/type" />

                <TextView
                    android:id="@+id/episode_item_type_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="段子手111"
                    android:textColor="@color/icon_text"
                    android:textSize="15dp" />

                <ImageView
                    android:id="@+id/episode_item_time_iv"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/time" />

                <TextView
                    android:id="@+id/episode_item_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018-9-3"
                    android:textColor="@color/icon_text"
                    android:textSize="15dp" />


            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>