<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_item_index_rv2"
    android:orientation="horizontal"
    android:padding="5dp">

    <TextView
        android:id="@+id/index2_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="标题"
        android:textColor="@color/shape_item_index_rv2_fontcolor"
        android:textSize="14sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/shape_item_index_rv2_border" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/index2_rv"
        android:layout_gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_weight="1">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>